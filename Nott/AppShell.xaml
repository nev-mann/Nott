<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Nott.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Nott.Views"
    Title="Nott">
    
    <FlyoutItem Title="Songs">
        <ShellContent Route="" ContentTemplate="{DataTemplate local:SongsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Albums">
        <ShellContent Route="AlbumsPage" ContentTemplate="{DataTemplate local:AlbumsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Queue">
        <ShellContent Route="QueuePage" ContentTemplate="{DataTemplate local:QueuePage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Settings">
        <ShellContent Route="SettingsPage" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>
</Shell>
