<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Nott.Views.Controls"
             x:Class="Nott.Views.SongsPage"
             Title="SongsPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <CollectionView ItemsSource="{Binding ListOfSongs}" Grid.Row="0" SelectionMode="Single" x:Name="ItemsCollectionView"
                        SelectedItem="{Binding SelectedSong}"
                        SelectionChangedCommand="{Binding PlaySongCommand}" 
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference ItemsCollectionView}}" ItemsUpdatingScrollMode="KeepScrollOffset">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--<BoxView Style="{StaticResource HorizontalBoarder}" Margin="10,0,0,0"/>-->
                        <StackLayout Orientation="Horizontal" Grid.Row="1">
                            <FlyoutBase.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Add To Queue"
                                                    BindingContext="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext}"
                                                    Command="{Binding AddToQueueCommand}"
                                                    CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext}"/>
                                </MenuFlyout>
                            </FlyoutBase.ContextFlyout>
                            
                            <Label Text="{Binding Id}" Margin="10,10,10,0" MinimumWidthRequest="30" HorizontalOptions="End"/>
                            <Label Text="{Binding Title}" Margin="10,10,10,0" WidthRequest="300" LineBreakMode="HeadTruncation"/>
                            
                            <Button HeightRequest="50" WidthRequest="50" BackgroundColor="Transparent"
                                BindingContext="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext}"                            
                                Command="{Binding HeartClickedCommand}"
                                CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext}">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Style.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext.Favorite}" Value="False">
                                                <Setter Property="ImageSource" Value="not.png"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext.Favorite}" Value="True">
                                                <Setter Property="ImageSource" Value="yes.png"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Label Text="{Binding Artist}" Margin="10,10,10,0" WidthRequest="300" LineBreakMode="HeadTruncation"/>
                            <Label Text="{Binding Album}" Margin="10,10,10,0" WidthRequest="300" LineBreakMode="HeadTruncation"/>
                            <Label Text="{Binding TimesListened}" Margin="10,10,10,0" WidthRequest="160" LineBreakMode="HeadTruncation"/>                            
                        </StackLayout> 
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <controls:SongBarView Grid.Row="1"/>
    </Grid>
</ContentPage>