<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Nott.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Nott.Views"
    Title="Nott">

    <FlyoutItem Title="Songs">
        <ShellContent ContentTemplate="{DataTemplate local:SongsPage}" Route="" />
    </FlyoutItem>

    <FlyoutItem Title="Albums">
        <ShellContent ContentTemplate="{DataTemplate local:AlbumsPage}" Route="AlbumsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Playlists">
        <ShellContent ContentTemplate="{DataTemplate local:PlaylistsPage}" Route="PlaylistsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Queue">
        <ShellContent ContentTemplate="{DataTemplate local:QueuePage}" Route="QueuePage" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
    </FlyoutItem>
</Shell>
