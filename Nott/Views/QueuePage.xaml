<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Nott.Views.Controls"
             x:Class="Nott.Views.QueuePage"
             Title="QueuePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        
        <CollectionView ItemsSource="{Binding SongQueue}" SelectionMode="None" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Song.Id}" Margin="10"/>
                        <Label Text="{Binding Song.Title}" Margin="10"/>
                        <Button Text="X" Command="{Binding BindingContext.RemoveSongCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}" 
                    CommandParameter="{Binding Position}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <controls:SongBarView Grid.Row="1"/>
    </Grid>
</ContentPage>