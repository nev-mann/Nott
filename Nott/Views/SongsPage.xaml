<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Nott.Views.Controls"
             x:Class="Nott.Views.SongsPage"
             Title="SongsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <CollectionView ItemsSource="{Binding ListOfSongs}" Grid.Row="0" SelectionMode="Single"  x:Name="ItemsCollectionView"
                        SelectedItem="{Binding SelectedSong}"
                        SelectionChangedCommand="{Binding PlaySongCommand}" 
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference ItemsCollectionView}}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Add To Queue"
                                                BindingContext="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext}"
                                                Command="{Binding AddToQueueCommand}"
                                                CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext}"/>
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>
                            
                        <Label Text="{Binding Id}" Margin="10"/>
                        <Label Text="{Binding Title}" Margin="10"/>
                        
                        <Button HeightRequest="50" WidthRequest="50"
                            BindingContext="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext}"                            
                            Command="{Binding HeartClickedCommand}"
                            CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext.Favorite}" Value="False">
                                            <Setter Property="ImageSource" Value="not.png"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button" Binding="{Binding Source={RelativeSource AncestorType={x:Type StackLayout}}, Path=BindingContext.Favorite}" Value="True">
                                            <Setter Property="ImageSource" Value="yes.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <controls:SongBarView Grid.Row="1"/>
    </Grid>
</ContentPage>